<%= form_for(@building) do |f| %>
  <div class="row ">
    <div class="field col-md-2 col-md-offset-3">
      <%= f.label :department, "Departamento:" %>
    </div>
    <div class="field col-md-2">
      <%= f.text_field :department %>
    </div>
  </div>

  <div class="row ">
    <div class="field col-md-2 col-md-offset-3">
      <%= f.label :description, "Descrição:" %>
    </div>
    <div class="field col-md-2">
      <%= f.text_field :description %>
    </div>
  </div>

  <%= f.submit "Criar", class: 'btn btn-default btn-lg'%>
  <%= link_to "Voltar ", buildings_path, class: 'btn btn-default btn-lg '%>
<% end %>
